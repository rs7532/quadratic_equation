<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="370dp" />

            <Button
                android:id="@+id/calculate"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:text="calculate"
                android:onClick="calculate_pressed"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="500dp" />

            <Button
                android:id="@+id/random"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Random coefficients"
                android:onClick="random_pressed"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <EditText
            android:id="@+id/coefficient_a"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="enter the a coefficient"
            android:inputType="number"
            android:textColorHint="#63000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <EditText
            android:id="@+id/coefficient_b"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="enter the b coefficient"
            android:inputType="number"
            android:textColorHint="#63000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <EditText
            android:id="@+id/coefficient_c"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="enter the c coefficient"
            android:inputType="number"
            android:textColorHint="#63000000" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>